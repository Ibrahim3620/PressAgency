@using PressAgency.ViewModels
@model LoginViewModel

<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form asp-controller="Account" asp-action="Login" method="post" id="loginForm">
        <div class="modal-header">
          <h5 class="modal-title" id="loginModalLabel">Login</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div asp-validation-summary="All" class="text-danger" id="loginFormValidationSummary"></div>
          <div class="mb-3">
            <label asp-for="UserName">
              @Html.DisplayNameFor(model => model.UserName)
            </label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
          </div>
          <div class="mb-3">
            <label asp-for="Password">
              @Html.DisplayNameFor(model => model.Password)
            </label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>
          <div class="mb-3 form-check">
            <input class="form-check-input" asp-for="RememberMe">
            <label class="form-check-label" asp-for="RememberMe">
              @Html.DisplayNameFor(model => model.RememberMe)
            </label>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Login</button>
          <div class="d-flex w-100 justify-content-center">
            <div class="spinner-border" role="status" style="display: none;">
              <span class="visually-hidden">Loading...</span>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
